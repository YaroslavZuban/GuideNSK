<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tsb"
    tools:context=".Help"
    android:name="android.permission.CALL_PHONE">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="513dp"
        android:layout_height="219dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/help" />


    <Button
        android:id="@+id/button1"
        android:layout_width="309dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:backgroundTint="@color/sb"
        android:onClick="onClickPolice"
        android:text="Police"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="309dp"
        android:layout_height="50dp"
        android:layout_marginTop="330dp"
        android:backgroundTint="@color/sb"
        android:onClick="onClickAmbulance"
        android:text="Ambulance"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button3"
        android:layout_width="309dp"
        android:layout_height="50dp"
        android:layout_marginTop="410dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/sb"
        android:onClick="onClickFirefighters"
        android:text="Firefighters"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button4"
        android:layout_width="309dp"
        android:layout_height="50dp"

        android:layout_marginTop="490dp"
        android:backgroundTint="@color/sb"
        android:onClick="onClickEmbassy"
        android:text="Embassy"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="onClickMenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.929"
        app:srcCompat="@drawable/ic_baseline_navigate_before_24" />


</androidx.constraintlayout.widget.ConstraintLayout>